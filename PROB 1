#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;

int main()
{
	int Add, Subtract, Multiply, Modulus, a, b, choice;
	double Divide;
	char confirm;

	do
	{
	cout << "=============================" << endl;
	cout << "             MENU            " << endl;
	cout << "=============================" << endl;
	cout << "1. Add" << endl;
	cout << "2. Subtract" << endl;
	cout << "3. Multiply" << endl;
	cout << "4. Divide" << endl;
	cout << "5. Modulus" << endl;
	cout << "Enter your choice (1-5): ";
	cin >> choice;
	cout << "Enter two integer numbers: ";
	cin >> a >> b;
	
		switch(choice)
		{
		case 1:
				Add = a + b;
				cout << "Result: " << Add << endl;
				break;
		case 2:
				Subtract = a - b;
				cout << "Result: " << Subtract << endl;
				break;
		case 3:
				Multiply = a * b;
				cout << "Result: " << Multiply << endl;
				break;
		case 4:
				Divide = a / b;
				cout << "Result: " << Divide << endl;
				break;
		case 5:
				Modulus = a % b;
				cout << "Result: " << Modulus << endl;
				break;
		default:
				cout << "Invalid!" << endl;
		}	
	
	cout << "Press y or Y to continue: ";
	cin >> confirm;
	
	}while(confirm == 'y' || confirm == 'Y');
	cout << "Invalid input! Boot the program again.";
	
}
